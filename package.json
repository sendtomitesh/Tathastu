{
  "name": "tathastubhav",
  "version": "1.0.0",
  "description": "TathastuBhav - WhatsApp command bot with skill-based integrations (Tally first)",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "bot": "node src/cli.js",
    "build": "electron-builder --win",
    "test": "node src/skills/tally/tests/test-all.js"
  },
  "keywords": [
    "whatsapp",
    "tally",
    "electron",
    "bot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.3.1",
    "fast-xml-parser": "^4.3.2",
    "form-data": "^4.0.5",
    "openai": "^4.24.1",
    "qrcode": "^1.5.3",
    "whatsapp-web.js": "^1.23.0"
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tathastubhav.app",
    "productName": "TathastuBhav",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
